.feed
  li
    padding 5px 0


    &.notification-item
      background rgba(255, 255, 255, .9)
      border-right 4px solid #ccc
      padding-left 10px
      margin 5px 0

h2.inside-feed
  color #bbb
  text-transform uppercase
  font-size 18px
  text-align center

  &:after, &:before
    content '~'

h3
  font-size 24px
  font-weight 700
  margin 10px 0
  color #222

.event-timeline
  display flex
  margin-bottom 20px
  flex-flow row wrap
  justify-content space-between

  // event timeline item
  > a
    text-align center
    border-bottom 4px solid #ddd
    padding 10px
    background #fff
    flex 0 18%
    margin-bottom 10px
    display flex
    flex-direction column
    align-items center
    margin 1%
    text-decoration none

    &:hover
      border-color #ccc

    img
      height 70px

.event-location
  color #888
  font-size 12px
  text-align right
  width 100%

.event-time
  color #fff
  background #EDC943
  font-size 14px
  text-transform uppercase
  font-weight 700
  padding 2px 10px
  margin-top 10px
  width 100%

.feed-event-description
  padding 10px 20px
  font-size 14px

  h3
    font-size 18px
    margin 0

  button, .button
    cursor pointer
    background linear-gradient(#eee, #ddd)
    color #333
    border 0
    border-radius 4px
    font-size 14px
    font-weight 700
    padding 8px 14px
    box-shadow 0 0 1px #999
    outline none

    &:hover
      box-shadow 0 0 1px #333
      background linear-gradient(#eee, #ccc)


  &:first-letter
    text-transform capitalize


.event-grid
  display flex
  flex-wrap wrap

  h3
    font-size 22px
    margin 10px 0

  > a // event-box
    display block
    background transparent
    border-right 0
    flex 0 0 100%
    color #444
    text-decoration none
    font-size 16px
    margin-bottom 30px

    img
      max-height 100%

    > article
      display flex
      align-items flex-top

      div
        flex 1 50%

        &:nth-child(2)
          padding 10px 30px
          order -1
          background white

    &:nth-child(2n+1)
      > article
        div:nth-child(2)
          order 1

.sidebar
  display block
  float right
  width 300px
  position fixed
  top 150px
  right 10%
  border-left 10px dotted #dedede
  padding-left 10px

  h2
    font-size 16px
    text-transform uppercase
    margin 0
    color #777
    text-align left
    margin-left 20px

  .sidebar-block-content
    background #fff
    padding 20px
    margin-bottom 10px

    img
      width 150px
      margin 0 auto
      display block

  ul li a
    display block

  .fa-star
    color #EDC943
    margin-right 10px

.live-feed
  li
    border-bottom 1px solid #ddd
    padding 2px 5px
    font-size 13px
    color #555
    cursor pointer

    &:hover
      color #222

    i
      color #C0392B
      margin-right 4px


@media all and (max-width: 800px)
  .sidebar
    display none


@media all and (max-width: 500px)
  .event-grid .feed-event-box
    width 100%
    height auto

  .event-timeline
    flex-direction column

    .event-timeline-item
      width 100%
