{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es5",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "types": ["cypress", "node"],
    "resolveJsonModule": true,
    "jsx": "preserve",
    "jsxImportSource": "react",
    "baseUrl": "../",
    "paths": {
      "app/*": ["./app/*"],
      "~/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
