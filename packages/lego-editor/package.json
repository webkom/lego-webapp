{
  "name": "@webkom/lego-editor",
  "version": "3.0.0",
  "description": "A React editor written in TS with tiptap for lego-webapp",
  "license": "MIT",
  "type": "module",
  "main": "./dist/lego-editor.umd.cjs",
  "module": "./dist/lego-editor.js",
  "style": "dist/style.css",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./src/index.tsx",
      "import": "./src/index.tsx"
    },
    "./dist/style.css": "./src/global.css"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/lego-editor.js",
        "require": "./dist/lego-editor.umd.cjs"
      },
      "./dist/style.css": {
        "import": "./dist/style.css",
        "require": "./dist/style.css"
      }
    }
  },
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "vite build && pnpm build:types",
    "build:types": "tsc --project tsconfig.app.json -d --emitDeclarationOnly",
    "prettier": "prettier '**/*.{ts,tsx,js,css,md,json}' --write",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@tiptap/core": "^2.11.5",
    "@tiptap/extension-image": "^2.11.5",
    "@tiptap/extension-link": "^2.11.5",
    "@tiptap/extension-placeholder": "^2.11.5",
    "@tiptap/extension-underline": "^2.11.5",
    "@tiptap/html": "^2.11.5",
    "@tiptap/pm": "^2.11.5",
    "@tiptap/react": "^2.11.5",
    "@tiptap/starter-kit": "^2.11.5",
    "@webkom/lego-bricks": "workspace:",
    "classnames": "catalog:",
    "lucide-react": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.11.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.11.0",
    "vite": "catalog:",
    "vitest": "catalog:"
  }
}
