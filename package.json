    "webpack-hot-middleware": "^2.20.0",
    "webpack-stats-plugin": "^0.1.5"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "color-hex-case": null,
      "string-quotes": "single",
      "indentation": 2,
      "custom-property-empty-line-before": null,
      "declaration-colon-newline-after": null,
      "property-no-unknown": null,
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "jest": {
    "globals": {
      "__DEV__": false,
      "__CLIENT__": true
    },
    "moduleDirectories": [
      "<rootDir>",
      "node_modules"
    ],
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp3|mp4|webm)$": "<rootDir>/testing/FileStub.js",
      "^.+\\.css$": "<rootDir>/testing/CSSStub.js"
    },
    "testRegex": "\\.spec\\.(js|jsx)$",
    "setupFiles": [
      "<rootDir>/testing/requestAnimationFrame.js",
      "<rootDir>/testing/setup.js"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "dllPlugin": {
    "path": "dist-client",
    "exclude": [
      "animate.css",
      "minireset.css",
      "jsdom",
      "bunyan",
      "bunyan-pretty",
      "raven",
      "source-map-support"
    ]
  },
  "moduleRoots": [
    "./"
  ]
}
