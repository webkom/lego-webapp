{
  "name": "lego-webapp",
  "version": "0.0.1",
  "description": "Abakus",
  "main": "index.js",
  "author": "webkom",
  "license": "MIT",
  "scripts": {
    "watch-js": "watchify src/index.js -d -o public/app.js -v",
    "watch-css": "stylus --use nib -w assets/stylesheets/style.styl -o public/app.css",
    "watch": "npm run watch-js & npm run watch-css & npm run start",
    "start": "nodemon --exec npm run 6to5-node -- server.js",
    "test": "istanbul cover _mocha -- src/**/__tests__/*-test.js --compilers js:6to5/register && istanbul report cobertura",
    "lint": "jsxhint src/ && jscs src/ --esnext",
    "6to5-node": "6to5-node --experimental --modules=common"
  },
  "repository": {
    "type": "git",
    "url": "github.com/webkom/lego-webapp"
  },
  "devDependencies": {
    "6to5": "~3.5.3",
    "6to5ify": "~4.1.0",
    "browserify": "~8.1.3",
    "chai": "~2.0.0",
    "esprima-fb": "*",
    "istanbul": "~0.3.5",
    "jscs": "*",
    "jsdom": "~3.1.1",
    "jsxhint": "*",
    "mocha": "~2.1.0",
    "nib": "~1.1.0",
    "nodemon": "~1.3.7",
    "stylus": "~0.50.0",
    "uglify-js": "~2.4.16",
    "watchify": "~2.3.0"
  },
  "dependencies": {
    "bluebird": "^2.9.14",
    "debounce": "^1.0.0",
    "express": "^4.11.2",
    "flux": "^2.0.1",
    "jsjws": "^2.0.0",
    "moment": "^2.9.0",
    "object-assign": "^2.0.0",
    "react": "^0.12.2",
    "react-a11y": "0.0.5",
    "react-router": "^0.11.6",
    "superagent": "^0.21.0",
    "superagent-bluebird-promise": "^2.0.0"
  },
  "browserify": {
    "transform": [
      [
        "6to5ify",
        {
          "modules": "common"
        }
      ]
    ]
  },
  "jscsConfig": {
    "preset": "airbnb",
    "esprima": "esprima-fb",
    "excludeFiles": [
      "node_modules/**",
      "coverage/**",
      "public/libs/**"
    ],
    "validateIndentation": 2,
    "disallowMultipleVarDecl": true,
    "requireMultipleVarDecl": null,
    "disallowQuotedKeysInObjects": null,
    "safeContextKeyword": [
      "self"
    ],
    "requirePaddingNewLinesAfterBlocks": null,
    "requireCamelCaseOrUpperCaseIdentifiers": "ignoreProperties",
    "disallowSpacesInsideParentheses": null
  },
  "jshintConfig": {
    "globalstrict": false,
    "browserify": true,
    "esnext": true,
    "devel": true,
    "expr": true
  }
}
