{
  "name": "lego-webapp",
  "version": "0.0.1",
  "description": "Abakus",
  "main": "index.js",
  "author": "webkom",
  "license": "MIT",
  "scripts": {
    "start": "webpack --config config/webpack.server.js",
    "build": "concurrently \"yarn run build:server\" \"yarn run build:client\"",
    "build:client": "NODE_ENV=production webpack --config config/webpack.client.js",
    "build:server": "NODE_ENV=production webpack --config config/webpack.server.js -p",
    "build:dll": "BUILDING_DLL=true webpack --display-chunks --color --config config/webpack.dll.js",
    "postinstall": "yarn run build:dll",
    "precommit": "lint-staged",
    "test": "NODE_ENV=test jest",
    "test:coverage": "yarn run test -- --coverage",
    "test:watch": "yarn run test -- --watch",
    "lint": "yarn run lint:js && yarn run lint:css",
    "lint:js": "eslint . --ignore-path .prettierignore",
    "lint:css": "stylelint './app/**/*.css'",
    "flow": "flow",
    "styleguide": "bash lib/generateCssDocs.sh && NODE_ENV=production styleguidist server",
    "styleguide:build": "bash lib/generateCssDocs.sh && NODE_ENV=production styleguidist build"
  },
  "repository": {
    "type": "git",
    "url": "github.com/webkom/lego-webapp"
  },
  "dependencies": {
    "animate.css": "3.5.2",
    "bunyan": "^1.8.12",
    "chalk": "^2.1.0",
    "child-process-promise": "^2.2.1",
    "classnames": "2.2.5",
    "isomorphic-fetch": "2.2.1",
    "jwt-decode": "2.2.0",
    "lodash": "^4.17.2",
    "marked": "0.3.6",
    "meow": "^3.7.0",
    "minireset.css": "^0.0.3",
    "moment": "^2.17.1",
    "moment-timezone": "^0.5.10",
    "morgan": "^1.8.2",
    "normalizr": "^3.2.2",
    "parse5": "^3.0.2",
    "prop-types": "^15.5.8",
    "raven": "^2.1.2",
    "raven-for-redux": "^1.0.0",
    "raven-js": "^3.17.0",
    "react": "^15.6.1",
    "react-collapse": "^4.0.3",
    "react-cookie": "^1.0.4",
    "react-cropper": "^0.12.0",
    "react-dom": "^15.6.1",
    "react-dropzone": "^3.10.0",
    "react-google-recaptcha": "^0.5.4",
    "react-helmet": "^4.0.0",
    "react-motion": "^0.5.1",
    "react-notification": "^6.6.0",
    "react-overlays": "^0.8.1",
    "react-portal": "^3.0.0",
    "react-prepare": "^0.4.0",
    "react-redux": "^5.0.1",
    "react-router": "^3.0.5",
    "react-router-redux": "^4.0.8",
    "react-select": "^1.0.0-rc.3",
    "react-stickynode": "^1.3.1",
    "react-stripe-checkout": "^2.4.0",
    "react-textarea-autosize": "^5.1.0",
    "react-treeview": "^0.4.6",
    "redux": "^3.7.2",
    "redux-form": "^6.5.0",
    "redux-logger": "^3.0.1",
    "redux-thunk": "^2.2.0",
    "reselect": "2.5.4",
    "slate": "^0.21.3",
    "slate-auto-replace": "^0.5.0",
    "slug": "^0.9.1",
    "websocket.js": "^0.1.7"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "babel-core": "^6.23.1",
    "babel-eslint": "^8.0.0",
    "babel-jest": "^21.0.2",
    "babel-loader": "^7.1.1",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-transform-import-to-require": "^1.0.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-latest": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-2": "^6.22.0",
    "concurrently": "^3.5.0",
    "css-loader": "^0.28.0",
    "enzyme": "^2.9.1",
    "eslint": "^4.7.1",
    "eslint-config-prettier": "^2.3.0",
    "eslint-config-react-app": "^2.0.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-plugin-flowtype": "^2.30.3",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.3.0",
    "express": "^4.14.1",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "flow-bin": "^0.51.1",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "identity-obj-proxy": "3.0.0",
    "jest": "^21.1.0",
    "json-loader": "^0.5.7",
    "lint-staged": "^4.0.2",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.0.6",
    "postcss-nested": "^2.1.0",
    "prettier": "^1.7.3",
    "react-hot-loader": "3.0.0-beta.4",
    "react-styleguidist": "^5.5.4",
    "react-test-renderer": "^15.6.0",
    "redux-mock-store": "^1.2.2",
    "start-server-webpack-plugin": "^2.1.2",
    "style-loader": "^0.18.2",
    "stylelint": "^7.7.0",
    "stylelint-config-standard": "^16.0.0",
    "timekeeper": "^1.0.0",
    "url-loader": "^0.5.9",
    "webpack": "^3.6.0",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.18.2"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "color-hex-case": null,
      "string-quotes": "single",
      "indentation": 2,
      "custom-property-empty-line-before": null,
      "declaration-colon-newline-after": null,
      "property-no-unknown": null,
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "lint-staged": {
    "**/*.{js,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "globals": {
      "__DEV__": false,
      "__CLIENT__": true
    },
    "moduleDirectories": [
      "<rootDir>",
      "node_modules"
    ],
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm)$": "<rootDir>/testing/FileStub.js",
      "^.+\\.css$": "<rootDir>/testing/CSSStub.js"
    },
    "testRegex": "\\.spec\\.(js|jsx)$"
  },
  "dllPlugin": {
    "path": "dist",
    "exclude": [
      "animate.css",
      "minireset.css",
      "bunyan",
      "raven",
      "child-process-promise",
      "chalk",
      "meow"
    ]
  },
  "moduleRoots": [
    "./"
  ]
}
