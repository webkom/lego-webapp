{
  "name": "lego-webapp",
  "version": "0.0.1",
  "description": "Abakus",
  "main": "index.js",
  "author": "webkom",
  "license": "MIT",
  "scripts": {
    "start": "concurrently \"yarn run build:server -- --watch\" \"node dist/server.js\"",
    "build": "concurrently \"yarn run build:server\" \"yarn run build:client\"",
    "build:client": "NODE_ENV=production webpack --config webpack/webpack.client.js",
    "build:server": "NODE_ENV=production webpack --config webpack/webpack.server.js",
    "build:dll": "BUILDING_DLL=true webpack --display-chunks --color --config webpack/webpack.dll.js",
    "postinstall": "yarn run build:dll",
    "test": "NODE_ENV=test jest",
    "test:coverage": "yarn run test -- --coverage",
    "test:watch": "yarn run test -- --watch",
    "lint": "yarn run lint:js && yarn run lint:css",
    "lint:js": "eslint app --ignore-path .gitignore",
    "lint:css": "stylelint ./app/**/*.css",
    "flow": "flow"
  },
  "repository": {
    "type": "git",
    "url": "github.com/webkom/lego-webapp"
  },
  "dependencies": {
    "animate.css": "3.5.2",
    "classnames": "2.2.5",
    "isomorphic-fetch": "2.2.1",
    "jwt-decode": "2.1.0",
    "lodash": "^4.17.2",
    "marked": "0.3.6",
    "minireset.css": "0.0.2",
    "moment": "^2.17.1",
    "moment-timezone": "^0.5.10",
    "normalizr": "^2.3.1",
    "react": "^15.4.1",
    "react-addons-css-transition-group": "^15.4.1",
    "react-cookie": "^1.0.4",
    "react-cropper": "^0.10.0",
    "react-dom": "^15.4.1",
    "react-dropzone": "^3.10.0",
    "react-google-recaptcha": "^0.5.4",
    "react-helmet": "^4.0.0",
    "react-notification": "^6.6.0",
    "react-overlays": "^0.6.11",
    "react-portal": "^3.0.0",
    "react-prepare": "^0.3.5",
    "react-redux": "^5.0.1",
    "react-router": "^3.0.2",
    "react-router-redux": "^4.0.8",
    "react-stripe-checkout": "^2.2.5",
    "react-treeview": "^0.4.6",
    "redux": "3.6.0",
    "redux-form": "^6.5.0",
    "redux-logger": "^2.8.1",
    "redux-thunk": "^2.2.0",
    "reselect": "2.5.4",
    "selection-position": "^1.0.0",
    "slate": "^0.16.21",
    "slate-auto-replace": "^0.3.0",
    "slate-auto-replace-text": "^0.3.1",
    "websocket.js": "^0.1.7"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.0.0",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.3.2",
    "babel-plugin-lodash": "^3.2.11",
    "babel-polyfill": "^6.23.0",
    "babel-preset-latest": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-2": "^6.22.0",
    "chalk": "1.1.3",
    "concurrently": "^3.3.0",
    "css-loader": "^0.26.1",
    "enzyme": "^2.7.0",
    "eslint": "^3.7.1",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-import-resolver-webpack": "^0.8.0",
    "eslint-plugin-flowtype": "^2.20.0",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-jsx-a11y": "2.2.3",
    "eslint-plugin-react": "^6.4.1",
    "express": "^4.14.1",
    "extract-text-webpack-plugin": "^2.0.0",
    "file-loader": "0.9.0",
    "flow-bin": "^0.37.4",
    "identity-obj-proxy": "3.0.0",
    "jest": "^19.0.2",
    "json-loader": "0.5.4",
    "null-loader": "0.1.1",
    "postcss-cssnext": "^2.9.0",
    "postcss-import": "^9.0.0",
    "postcss-loader": "^1.2.1",
    "postcss-nested": "1.0.0",
    "react-addons-test-utils": "^15.4.1",
    "react-dev-utils": "^0.5.0",
    "react-hot-loader": "3.0.0-beta.4",
    "react-test-renderer": "^15.4.1",
    "style-loader": "0.13.1",
    "stylelint": "^7.7.0",
    "stylelint-config-standard": "^16.0.0",
    "url-loader": "0.5.7",
    "webpack": "^2.2.1",
    "webpack-dev-middleware": "^1.10.1",
    "webpack-hot-middleware": "^2.17.0"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "color-hex-case": null,
      "string-quotes": "single",
      "indentation": 2,
      "custom-property-empty-line-before": null,
      "property-no-unknown": null,
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "jest": {
    "globals": {
      "__DEV__": false
    },
    "moduleDirectories": [
      "<rootDir>",
      "node_modules"
    ],
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm)$": "<rootDir>/testing/FileStub.js",
      "^.+\\.css$": "<rootDir>/testing/CSSStub.js"
    },
    "testRegex": "\\.spec\\.(js|jsx)$"
  },
  "dllPlugin": {
    "path": "dist",
    "exclude": [
      "animate.css",
      "minireset.css"
    ]
  }
}
